.container.mt-4
  .row.justify-content-center
    .col-md-8
      - if @post.errors.any?
        .alert.alert-danger
          %p エラーが発生しました
          %ul
            - @post.errors.full_messages.each do |message|
              %li= message

      = form_with(model: @post, class: "mt-4") do |f|
        .mb-3
          = f.label :content, class: "form-label"
          = f.text_area :content, class: "form-control", rows: 5, placeholder: "いまどうしてる？"

        = f.submit "投稿する", class: "btn btn-primary"

      = link_to "タイムラインへ戻る", posts_path, class: "btn btn-secondary mt-4"
